<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" 
        android:gravity="center"
        android:layout_gravity="center" >

        <TableRow
            android:id="@+id/about_tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/about_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:src="@drawable/ic_launcher" />

        </TableRow>

        <TableRow
            android:id="@+id/about_tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/about_text"
                android:textColor="@color/black" />

        </TableRow>

        <TableRow
            android:id="@+id/about_tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/about_versiontextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray" />

        </TableRow>

        <TableRow
            android:id="@+id/about_tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/about_licenses_button"
                android:background="@color/white"
                android:textColor="@color/blue"
                android:selectAllOnFocus="true"
          		android:linksClickable="true"
     			android:autoLink="all"
                android:textSize="12sp"
                android:text="Open Source Licenses" />

        </TableRow>

    </TableLayout>

</LinearLayout>
